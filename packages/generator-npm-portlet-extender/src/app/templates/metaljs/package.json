{
	"name": "<%= name %>",
    "version": "1.0.0",
    "description": "<%= description %>",
	"main": "index.js",
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-metal-jsx": "^0.1.1",
		"liferay-npm-bundler": "^2.0.0"
	},
	"dependencies": {
		"metal": "^2.0.0",
		"metal-component": "^2.0.0",
		"metal-dom": "^2.0.0",
		"metal-events": "^2.0.0",
		"metal-incremental-dom": "^2.0.0",
		"metal-jsx": "^2.0.0",
		"metal-state": "^2.0.0"
	},
	"scripts": {
		"build": "babel --source-maps -D -d build src && liferay-npm-bundler",
        "deploy": "npm run build && node ./scripts/deploy"
	},
	"portlet": {
        "com.liferay.portlet.display-category": "<%= displayCategory %>",
		"com.liferay.portlet.header-portlet-css": "/css/styles.css",
        "com.liferay.portlet.instanceable": "true",
        "javax.portlet.display-name": "<%= description %>",
        "javax.portlet.security-role-ref": "power-user,user"
    }
}
